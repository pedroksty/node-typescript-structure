{
"compilerOptions": {
  "target": "es2017",
  "module": "commonjs",
  "lib": ["es6"],
  "allowJs": true,
  "outDir": "./dist",
  "rootDir": "./src",
  "removeComments": true,
  "esModuleInterop": true,
  "resolveJsonModule": true,
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true,
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true,
  "baseUrl": "./src",
  "paths": {
    "@modules/*": ["modules/*"],
    "@config/*": ["config/*"],
    "@shared/*": ["shared/*"]
  }
},
"include": ["./src/**/*"]
}